<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingVertical="@dimen/home_v_padding"
        android:paddingHorizontal="@dimen/home_v_margin"
        android:gravity="center_vertical"
        android:background="@drawable/bg_notification_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:riv_corner_radius="@dimen/home_v_padding"
            android:src="@drawable/ic_app"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/titlePrefix"
            android:textSize="16dp"
            android:text="@string/video_record_notification_prefix"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="@dimen/home_h_margin"
            android:textColor="@color/notification_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/des"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/notification_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/home_v_padding"
        android:background="@drawable/bg_notification_bot"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_marginStart="@dimen/home_v_margin"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/tap_to_open"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/notification_text_color"
                android:layout_marginTop="@dimen/home_v_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>