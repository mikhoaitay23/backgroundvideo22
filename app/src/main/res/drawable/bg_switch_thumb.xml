<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list >
            <item>
                <shape android:shape="oval"/>
            </item>

            <item
                android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="#80B5B5B5"/>
                </shape>
            </item>

            <item
                android:top="1dp"
                android:bottom="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/colorAccent"/>
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list >
            <item>
                <shape android:shape="oval"/>
            </item>

            <item
                android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="#80B5B5B5"/>
                    <size android:width="20dp"
                        android:height="20dp"/>
                </shape>
            </item>

            <item
                android:top="1dp"
                android:bottom="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/bg_switch_disable"/>
                    <size android:width="20dp"
                        android:height="20dp"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>