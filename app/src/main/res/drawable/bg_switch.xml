<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list >
            <item>
                <shape android:shape="rectangle"/>
            </item>

            <item
                android:top="@dimen/record_switch_padding"
                android:bottom="@dimen/record_switch_padding">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_switch"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>

        </layer-list>

    </item>

    <item android:state_checked="false">
        <layer-list >
            <item>
                <shape android:shape="rectangle"/>
            </item>

            <item
                android:top="@dimen/record_switch_padding"
                android:bottom="@dimen/record_switch_padding">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_switch"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>