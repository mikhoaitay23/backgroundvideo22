<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Background_Video_Record" parent="Base.Theme.MyApp"/>

    <style name="TextAppearanceToolbar">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearancePrivacy1">
        <item name="android:textSize">26dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearancePrivacy2">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearancePrivacy3">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearanceHome1">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="TextAppearanceHome2">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="TextAppearanceHome3">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextPager">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RecordLayoutStyle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecordLayoutStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/home_v_margin</item>
        <item name="android:paddingBottom">@dimen/home_v_margin</item>
    </style>

    <style name="TextRecordTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRecordProperties1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextRecordProperties2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawableEnd">@drawable/ic_keyboard_arrow_right</item>
        <item name="android:drawablePadding">@dimen/home_v_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextRecordDuration">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="TextRecordButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:layout_marginTop">@dimen/home_v_margin</item>
        <item name="android:layout_marginBottom">@dimen/home_v_margin</item>
        <item name="android:paddingTop">@dimen/home_v_margin</item>
        <item name="android:paddingBottom">@dimen/home_v_margin</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:background">@drawable/bg_button_start</item>
        <item name="android:elevation">@dimen/home_v_padding</item>
    </style>

    <style name="TextSchedule">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingStart">@dimen/home_h_margin</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/home_h_margin</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogConfirmTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialog1">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:elevation">@dimen/home_v_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="TextDialogMsg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="HomeSmallIcon">
        <item name="android:layout_width">@dimen/home_mall_icon_height</item>
        <item name="android:layout_height">@dimen/home_mall_icon_height</item>
        <item name="android:background">@drawable/bg_banner_home</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:elevation">@dimen/home_v_padding</item>
        <item name="android:layout_marginTop">@dimen/home_v_margin</item>
        <item name="android:layout_marginBottom">@dimen/home_v_margin</item>
    </style>

    <style name="RecordDivineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/record_divine_color</item>
    </style>

    <style name="RecordTextTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextSetting1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextSetting2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:layout_marginTop">@dimen/home_v_padding</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="WarnText1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">@dimen/home_h_margin</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="WarnText2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/home_h_margin</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppLockLayout1">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppLockLayout2">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/app_lock_btn_padding</item>
        <item name="android:paddingBottom">@dimen/app_lock_btn_padding</item>
        <item name="android:paddingStart">@dimen/app_lock_btn_padding</item>
        <item name="android:paddingEnd">@dimen/app_lock_btn_padding</item>
    </style>

    <style name="AppLockBtnText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_applock_btn</item>
        <item name="android:textSize">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

</resources>